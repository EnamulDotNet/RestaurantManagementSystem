/* Gridview Styling Start */

.gvheaderstyle th {
    background-color: #b0c4de;
    font-weight: bolder;
    color: #000000;
    border-width: 1px;
    border-color: #000000;
    padding: 5px;
    text-align: center;
}

.gvrowstyle {
    background-color: #eeeeee;
    color: #000000;
}

.gvalternativerowstyle td {
    background-color: #ffffff;
    padding: 5px;
}

.gvrowstyle td {
    padding: 5px;
}

.gvselectedrowstyle td {
    background-color: #20b2aa;
    font-weight: bolder;
    color: #FFFFFF;
    padding: 5px;
}

.gvcontrolstyle {
    font-weight: bold;
    color: #0000FF;
}

.gvcolumnhide {
    display: none;
}

/* Gridview Styling Start */

/* Dynamic Navigation Menu Start */

.StaticMenuItem {
    vertical-align: middle;
    text-align: center;
}

.StaticMenuItemStyle {
    color: #000000;
    width: 100px;
    padding: 15px 5px;
}

    .StaticMenuItemStyle:hover {
        color: #000000;
        width: 100px;
    }

.DynamicMenuItemStyle {
    background-color: #e9e9e9;
    font: 12pt calibri;
    height: 30px;
    text-align: left;
    color: #000000;
    padding: 5px;
}

    .DynamicMenuItemStyle:hover {
        background-color: #e9e9e9;
        font: 12pt calibri;
        height: 30px;
        text-align: left;
        color: #000000;
        padding: 5px;
    }

/* Dynamic Navigation Menu End */

/* Ajax Modal Design Start */

.tableBackground {
    background-color: silver;
    opacity: 0.7;
}

.updatemodal {
    padding: 10px;
    border-radius: 10px;
    animation-delay: 0.7s;
}

@keyframes fadeIn { from { opacity:0; } to { opacity:1; } }

.fade-in {
	opacity:0;  /* make things invisible upon start */
	animation:fadeIn ease-in 1;
	animation-fill-mode:forwards;
	animation-duration:0.5s;
}


/* Ajax Modal Design End */